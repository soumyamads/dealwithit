<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        >

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/wrong"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="7dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bottom_selector_transparent"
                android:src="@drawable/left_cross"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Menu"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textColor="#ffffff"
                android:layout_centerInParent="true" />

            <!--<ImageView-->
            <!--android:id="@+id/delete"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:padding="4dp"-->
            <!--android:clickable="true"-->
            <!--android:focusable="true"-->
            <!--android:src="@drawable/delete_icon"-->
            <!--android:background="@drawable/bottom_selector_transparent"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="50dp" />-->

            <ImageView
                android:id="@+id/right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="7dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/right_tick"
                android:background="@drawable/bottom_selector_transparent"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:visibility="gone"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/right_tick"
            android:background="@drawable/bottom_selector_transparent"
            android:layout_alignParentRight="true"
            />
        <!--<ImageView-->
        <!--android:id="@+id/image2"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:padding="7dp"-->
        <!--android:clickable="true"-->
        <!--android:focusable="true"-->
        <!--android:src="@drawable/right_tick"-->
        <!--android:background="@drawable/bottom_selector_transparent"-->
        <!--android:layout_alignParentRight="true"-->
        <!--/>-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp">


        <Button
            android:id="@+id/tkphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TAKE A PHOTO"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:background="@drawable/bottom_selector_secondary"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/addgallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD FROM GALLERY"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:background="@drawable/bottom_selector_secondary"
            android:textColor="#ffffff"
            />
    </LinearLayout>

</LinearLayout>
