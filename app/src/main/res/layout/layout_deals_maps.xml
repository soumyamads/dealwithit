<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:http="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<FrameLayout
    xmlns:http="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<fragment
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dealwithit.user.fragments.MapDealsFragment" /></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <ImageView
            android:id="@+id/down_arrows1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="10dp"
            android:visibility="invisible"
            android:src="@drawable/down_arrows"/>

        <ImageView
            android:id="@+id/down_arrows2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="10dp"
            android:visibility="invisible"
            android:src="@drawable/down_arrows"/>

        <ImageView
            android:id="@+id/down_arrows3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:src="@drawable/down_arrows"/>

        <ImageView
            android:id="@+id/down_arrows4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="10dp"
            android:visibility="invisible"
            android:src="@drawable/down_arrows"/>

        <ImageView
            android:id="@+id/down_arrows5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="10dp"
            android:visibility="invisible"
            android:src="@drawable/down_arrows"/>
    </LinearLayout>

</RelativeLayout>